@model IEnumerable<CoreEntities.FacilityEmployee>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ViewFacilityEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Facility Employees</h2>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.FacilityName)
                </td>
                <td>
                    <a asp-action="AddFacilityEmployee" asp-route-EmployeeId="@item.FacilityId">Add Another Employee</a> |
                    <a asp-action="EditFacilityEmployee" asp-route-EmployeeId="@item.EmployeeId">Edit</a> |
                    <a asp-action="DeleteFacilityEmployee" asp-route-EmployeeId="@item.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
