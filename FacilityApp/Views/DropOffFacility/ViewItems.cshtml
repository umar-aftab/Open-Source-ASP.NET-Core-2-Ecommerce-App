@model IEnumerable<CoreEntities.FacilityItem>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ViewItems";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Items</h2>

<div>
    <a asp-action="Index">Back to Home</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DroppedOf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickedUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DroppedOf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickedUp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility.FacilityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Flagged)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.Email)
                </td>
                <td>
                    <a asp-action="DroppedOff" asp-route-ItemId="@item.ItemId">Mark DroppedOff</a> |
                    <a asp-action="PickedUp" asp-route-ItemId="@item.ItemId">Mark PickedUp</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
